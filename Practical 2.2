<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dynamic Product Filter</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap');
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f3f4f6;
        }
        .product-card {
            transform: scale(1);
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        .product-card:hover {
            transform: scale(1.03);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body class="p-8">
    <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-xl p-8">
        <h1 class="text-4xl font-bold text-center text-gray-800 mb-2">Our Products</h1>
        <p class="text-center text-gray-600 mb-8">Filter items by category using the dropdown below.</p>

        <div class="flex flex-col sm:flex-row items-center justify-between mb-8">
            <label for="category-filter" class="text-gray-700 font-medium mb-2 sm:mb-0">Filter by Category:</label>
            <select id="category-filter" class="p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors w-full sm:w-1/3">
                <option value="all">All Categories</option>
                <option value="electronics">Electronics</option>
                <option value="apparel">Apparel</option>
                <option value="home-goods">Home Goods</option>
            </select>
        </div>

        <div id="product-list" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Product cards will be dynamically inserted here by JavaScript -->
        </div>
    </div>

    <script>
        const products = [
            { id: 1, name: "Wireless Headphones", category: "electronics", price: "$99.99" },
            { id: 2, name: "Vintage T-Shirt", category: "apparel", price: "$25.00" },
            { id: 3, name: "Smart Coffee Maker", category: "home-goods", price: "$120.50" },
            { id: 4, name: "Leather Jacket", category: "apparel", price: "$199.99" },
            { id: 5, name: "4K Monitor", category: "electronics", price: "$349.00" },
            { id: 6, name: "Robot Vacuum", category: "home-goods", price: "$250.00" },
            { id: 7, name: "Portable Speaker", category: "electronics", price: "$75.00" },
            { id: 8, name: "Denim Jeans", category: "apparel", price: "$55.00" },
            { id: 9, name: "Blender", category: "home-goods", price: "$89.99" },
        ];

        const filterDropdown = document.getElementById('category-filter');
        const productListContainer = document.getElementById('product-list');

        function renderProducts(filteredProducts) {
            productListContainer.innerHTML = '';
            filteredProducts.forEach(product => {
                const card = document.createElement('div');
                card.className = 'product-card bg-white p-6 rounded-xl shadow-md border border-gray-200';
                card.innerHTML = `
                    <div class="flex flex-col items-center">
                        <svg class="h-16 w-16 text-blue-500 mb-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
                        </svg>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">${product.name}</h3>
                        <p class="text-gray-600 mb-1">${product.category.toUpperCase()}</p>
                        <p class="text-blue-600 font-bold text-xl">${product.price}</p>
                    </div>
                `;
                productListContainer.appendChild(card);
            });
        }

        filterDropdown.addEventListener('change', (event) => {
            const selectedCategory = event.target.value;
            let filteredProducts = products;
            
            if (selectedCategory !== 'all') {
                filteredProducts = products.filter(product => product.category === selectedCategory);
            }
            
            renderProducts(filteredProducts);
        });

        // Initial render of all products
        renderProducts(products);
    </script>
</body>
</html>
